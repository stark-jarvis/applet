/* components/header2.wxss */

#header {
  width: 100%;
}

.header {
  position: relative;
  width: 85%;
  height: 70px;
  margin: -25px auto 15px;
  border-radius: 3px;
  /*background: radial-gradient(ellipse at center, rgba(178,225,255,1) 0%,rgba(102,182,252,1) 100%);*/
  background-color: #FFF;
  box-shadow: rgba(0, 0, 0, 0.38) 0px 2px 4px;
  z-index: 10000;
}


/* 头部登录 */
.header-label {
  position: absolute;
  left: 50%;
  top: 28%;
  height: 30px;
  width: 1px;
  background-color: #ccc;
}

.header-userinfo,
.header-collect {
  position: relative;
  float: left;
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}

.header-login-btn,
.header-collect-btn {
  display: inline-block;
  width: 88rpx;
  height: 88rpx;
  margin-top: 5px;
  border-radius: 50%;
  overflow: hidden;
}
.login-txt,
.header-collect-txt {
  display: block;
  margin-top: -4px;
  font-size: 12px;
  color: #666;
}


/* my page */
.my-header {
  margin-top: 10px;
}

.my-header .header-userinfo {
  width: 22%;
}
