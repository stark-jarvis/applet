/* 导航 tabs */
.tabs { 
  width: 100%;
  font-size: 16px;
}
.nav {
  height: 30px;
  line-height: 30px;
  background-color: #eee;
}

.nav-item {
  float: left;
  width: auto;
  padding: 0 30rpx;
  color: #333;
}

/* tabs panels */
.panels {
  min-height: 300px;
  background: #FFF; 
  padding: 30rpx;
}
.panel-box {
  display: none;
  height: 100%;
}

/* 激活 tab */
.nav .active {
  font-size: 18px;
  font-weight: 700;
}
.nav .active .nav-item-txt {
  border-bottom: 1px solid #319aeb;
}

.panels .active {
  display: block;
}
