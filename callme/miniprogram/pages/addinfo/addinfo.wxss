/* miniprogram/pages/addinfo.wxss */

.addinfo {
  padding: 30px 20px;
}

.addinfo-title {
  display: block;
  height: 35px;
  margin-bottom: 10px;
  line-height: 35px;
  text-align: center;
  background-color: #ccc;
  color: #333;
  font-size: 16px;
}

.input-item {
  border: 1px solid #ccc;
  padding: 0 10px;
  margin-bottom: 10px;
}

.input {
  height: 35px;
  line-height: 35px;
}

.submit-box {
  text-align: center;
}

.submit-btn {
  display: inline-block;
  padding: 10px 25px;
  border-radius: 2px;
  background-color: #058c02;
  color: #fff;
}
